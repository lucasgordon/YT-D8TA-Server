          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              reverse: true,
              beginAtZero: false,
              title: {
                display: true,
                text: 'Rank Position'
              }
            },
            x: {
              title: {
                display: true,
                text: 'Date'
              }
            }
          },
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              callbacks: {
                title: function(context) {
                  return 'Date: ' + context[0].label;
                },
                label: function(context) {
                  return 'Rank: ' + context.parsed.y;
                }
              }
            }
          }
        }
