    <% if @recent_views.any? %>
      const viewsCtx = document.getElementById('viewsChart').getContext('2d');
      new Chart(viewsCtx, {
        type: 'bar',
        data: {
          labels: [<%= @recent_views.map { |v| "'#{Date.parse(v.date).strftime("%m/%d/%Y")}'" }.join(', ').html_safe %>],
          datasets: [{
            label: 'Daily Views',
            data: [<%= @recent_views.map(&:single_day_views).join(', ').html_safe %>],
            backgroundColor: 'rgba(34, 197, 94, 0.8)',
            borderColor: 'rgb(34, 197, 94)',
            borderWidth: 1
