<div class="min-h-screen bg-gray-50">
  <!-- Header with back button -->
  <div class="bg-white shadow-sm border-b">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <a href="<%= videos_path %>" class="flex items-center text-gray-600 hover:text-gray-900 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Videos
          </a>
          <div class="h-6 w-px bg-gray-300"></div>
          <h1 class="text-2xl font-bold text-gray-900">Video Details</h1>
        </div>
        <div class="flex items-center space-x-3">
          <a href="<%= @video.watch_url %>" target="_blank" 
             class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            Watch
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <!-- Main Video Information Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
      <div class="md:flex">
        <!-- Thumbnail Section -->
        <div class="md:w-1/3">
          <div class="relative">
            <% if @thumbnail %>
              <img src="<%= @thumbnail.url %>" alt="Video thumbnail" class="w-full h-64 md:h-full object-cover">
            <% else %>
              <div class="w-full h-64 md:h-full bg-gray-200 flex items-center justify-center">
                <svg class="w-16 h-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>
            <div class="absolute bottom-4 right-4 bg-black bg-opacity-75 text-white px-3 py-1 rounded-lg text-sm">
              <% if @video.length_seconds.present? %>
                <% seconds = @video.length_seconds.to_i %>
                <% minutes = seconds / 60 %>
                <% remaining_seconds = seconds % 60 %>
                <%= "#{minutes}:#{remaining_seconds.to_s.rjust(2, '0')}" %>
              <% else %>
                -
              <% end %>
            </div>
          </div>
        </div>

        <!-- Video Details Section -->
        <div class="md:w-2/3 p-6">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @video.title %></h2>
            <p class="text-gray-600 text-sm mb-4">
              <% if @video.date_published.present? %>
                <% published_date = @video.date_published.is_a?(Time) ? @video.date_published : Time.parse(@video.date_published) %>
                Published <%= time_ago_in_words_custom(published_date.to_date) %>
                <span class="text-gray-500">(<%= published_date.strftime("%B %d, %Y") %>)</span>
              <% end %>
            </p>
            
            <% if @video.description.present? %>
              <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">Description</h3>
                <div class="text-sm text-gray-600">
                  <div id="description-preview" class="line-clamp-3">
                    <%= truncate(@video.description, length: 300) %>
                  </div>
                  <div id="description-full" class="hidden">
                    <%= simple_format(@video.description) %>
                  </div>
                  <button onclick="toggleDescription()" class="text-blue-600 hover:text-blue-800 text-sm font-medium mt-2">
                    <span id="expand-text">Read more</span>
                    <span id="collapse-text" class="hidden">Read less</span>
                  </button>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Key Stats Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@video.view_count) %></div>
              <div class="text-sm text-gray-600">Total Views</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@video.like_count) %></div>
              <div class="text-sm text-gray-600">Likes</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@video.comment_count) %></div>
              <div class="text-sm text-gray-600">Comments</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@video.external_view_count) %></div>
              <div class="text-sm text-gray-600">External Views</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Performance Metrics Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Ranking Performance -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            Ranking Performance
          </h3>
          
          <% if @available_dates.any? %>
            <div class="flex items-center space-x-2">
              <select id="selected_date" name="selected_date" 
                      class="border border-gray-300 rounded-md px-4 py-2 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 min-w-64"
                      onchange="updateDateSelection(this.value)">
                <% @available_dates.each_with_index do |date, index| %>
                  <% days_after_publish = (@video.date_published.present? ? (date - @video.date_published.to_date).to_i : 0) %>
                  <% next if days_after_publish == 0 %>
                  <option value="<%= date %>" <%= 'selected' if date == @selected_date %>>
                    <%= days_after_publish %> days (<%= date.strftime("%b %d, %Y") %>)
                  </option>
                <% end %>
              </select>
            </div>
          <% end %>
        </div>
        
        <% if @selected_daily_ranking %>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Daily Rank</span>
              <span class="text-2xl font-bold text-gray-900">#<%= @selected_daily_ranking.daily_position %></span>
            </div>
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Daily Percentile</span>
              <span class="text-xl font-semibold text-gray-900"><%= number_with_precision(@selected_daily_ranking.daily_percentile * 100, precision: 1) %>%</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Daily Total Videos</span>
              <span class="text-lg font-semibold text-gray-600"><%= number_with_delimiter(@selected_daily_ranking.daily_total_videos) %></span>
            </div>
            <% if @selected_daily_ranking.daily_rank_change %>
              <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
                <span class="font-medium text-gray-700">Daily Rank Change</span>
                <span class="text-lg font-semibold text-gray-900">
                  <%= @selected_daily_ranking.daily_rank_change > 0 ? '+' : '' %><%= @selected_daily_ranking.daily_rank_change %>
                </span>
              </div>
            <% end %>
          </div>
        <% elsif @latest_ranking %>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Current Rank</span>
              <span class="text-2xl font-bold text-gray-900">#<%= @latest_ranking.rank %></span>
            </div>
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Percentile</span>
              <span class="text-xl font-semibold text-gray-900"><%= number_with_precision(@latest_ranking.percentile, precision: 1) %>%</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <span class="font-medium text-gray-700">Total Videos</span>
              <span class="text-lg font-semibold text-gray-600"><%= number_with_delimiter(@latest_ranking.total_videos) %></span>
            </div>
            <% if @latest_ranking.rank_change_since_day_1 %>
              <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
                <span class="font-medium text-gray-700">Rank Change</span>
                <span class="text-lg font-semibold text-gray-900">
                  <%= @latest_ranking.rank_change_since_day_1 > 0 ? '+' : '' %><%= @latest_ranking.rank_change_since_day_1 %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <p>No ranking data available</p>
          </div>
        <% end %>
      </div>

      <!-- View Statistics -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View Statistics
        </h3>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <span class="font-medium text-gray-700">Average Daily Views</span>
            <span class="text-lg font-semibold text-gray-900"><%= number_with_delimiter(@avg_daily_views) %></span>
          </div>
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <span class="font-medium text-gray-700">Peak Daily Views</span>
            <div class="text-right flex flex-row items-center">
              <% if @max_daily_views_date %>
                <div class="text-sm text-gray-500 mr-2"><%= Date.parse(@max_daily_views_date).strftime("%b %d, %Y") %></div>
              <% end %>
              <div class="text-lg font-semibold text-gray-900"><%= number_with_delimiter(@max_daily_views) %></div>
            </div>
          </div>
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <span class="font-medium text-gray-700">Min Daily Views</span>
            <div class="text-right flex flex-row items-center">
              <% if @min_daily_views_date %>
                <div class="text-sm text-gray-500 mr-2"><%= Date.parse(@min_daily_views_date).strftime("%b %d, %Y") %></div>
              <% end %>
              <div class="text-lg font-semibold text-gray-900"><%= number_with_delimiter(@min_daily_views) %></div>
            </div>
          </div>
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <span class="font-medium text-gray-700">Days Tracked</span>
            <span class="text-lg font-semibold text-gray-900"><%= @video.views.count %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Performance Charts -->
    <% if @daily_rankings.any? || @recent_views.any? %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Daily Rankings Chart -->
        <% if @daily_rankings.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Daily Rankings (Last 30 Days)</h3>
            <div class="h-64">
              <canvas id="rankingsChart"></canvas>
            </div>
          </div>
        <% end %>

        <!-- Daily Views Chart -->
        <% if @recent_views.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Daily Views (Last 30 Days)</h3>
            <div class="h-64">
              <canvas id="viewsChart"></canvas>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

<% if @daily_rankings.any? || @recent_views.any? %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Rankings Chart
    <% if @daily_rankings.any? %>
      const rankingsCtx = document.getElementById('rankingsChart').getContext('2d');
      new Chart(rankingsCtx, {
        type: 'line',
        data: {
          labels: [<%= @daily_rankings.map { |r| "'#{r.date.strftime("%m/%d")}'" }.join(', ').html_safe %>],
          datasets: [{
            label: 'Daily Position',
            data: [<%= @daily_rankings.map(&:daily_position).join(', ').html_safe %>],
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
            tension: 0.1,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              reverse: true,
              beginAtZero: false
            }
          },
          plugins: {
            legend: {
              display: false
            }
          }
        }
      });
    <% end %>

    // Views Chart
    <% if @recent_views.any? %>
      const viewsCtx = document.getElementById('viewsChart').getContext('2d');
      new Chart(viewsCtx, {
        type: 'bar',
        data: {
          labels: [<%= @recent_views.map { |v| "'#{Date.parse(v.date).strftime("%m/%d")}'" }.join(', ').html_safe %>],
          datasets: [{
            label: 'Daily Views',
            data: [<%= @recent_views.map(&:single_day_views).join(', ').html_safe %>],
            backgroundColor: 'rgba(34, 197, 94, 0.8)',
            borderColor: 'rgb(34, 197, 94)',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true
            }
          },
          plugins: {
            legend: {
              display: false
            }
          }
        }
      });
    <% end %>
  </script>
<% end %>

<script>
  // Description toggle functionality
  function toggleDescription() {
    const preview = document.getElementById('description-preview');
    const full = document.getElementById('description-full');
    const expandText = document.getElementById('expand-text');
    const collapseText = document.getElementById('collapse-text');
    
    if (preview.classList.contains('hidden')) {
      // Show preview, hide full
      preview.classList.remove('hidden');
      full.classList.add('hidden');
      expandText.classList.remove('hidden');
      collapseText.classList.add('hidden');
    } else {
      // Show full, hide preview
      preview.classList.add('hidden');
      full.classList.remove('hidden');
      expandText.classList.add('hidden');
      collapseText.classList.remove('hidden');
    }
  }

  // Date selection functionality
  function updateDateSelection(selectedDate) {
    const currentUrl = new URL(window.location);
    currentUrl.searchParams.set('selected_date', selectedDate);
    window.location.href = currentUrl.toString();
  }
</script> 