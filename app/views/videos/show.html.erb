  // Description toggle functionality
  function toggleDescription() {
    const preview = document.getElementById('description-preview');
    const full = document.getElementById('description-full');
    const expandText = document.getElementById('expand-text');
    const collapseText = document.getElementById('collapse-text');
    
    if (preview.classList.contains('hidden')) {
      // Show preview, hide full
      preview.classList.remove('hidden');
      full.classList.add('hidden');
      expandText.classList.remove('hidden');
      collapseText.classList.add('hidden');
    } else {
      // Show full, hide preview
      preview.classList.add('hidden');
      full.classList.remove('hidden');
      expandText.classList.add('hidden');
      collapseText.classList.remove('hidden');
    }
  }

  // Date selection functionality
  function updateDateSelection(selectedDate) {
    const currentUrl = new URL(window.location);
    currentUrl.searchParams.set('selected_date', selectedDate);
    window.location.href = currentUrl.toString();
  }

